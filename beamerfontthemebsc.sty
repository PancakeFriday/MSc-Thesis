%\usepackage[T1]{fontenc}
\usepackage{xunicode}
\usepackage{fontspec}
\usepackage{xltxtra}


\defaultfontfeatures{Mapping=tex-text}
\setromanfont[Mapping=tex-text]{Linux Libertine}
\setsansfont[Mapping=tex-text]{Myriad Pro}
\setmonofont[Mapping=tex-text]{Courier New}
\newfontfamily\Sans{Myriad Pro}
\newfontfamily\Regular{Myriad Pro}
\newfontfamily\Italic{Myriad Pro Italic}
\newfontfamily\Bold{Myriad Pro Bold}
\newfontfamily\Black{Myriad Pro Semibold}

%\AtBeginEnvironment{tabular}{\setsansfont[BoldFont={Palatino}, Numbers={Monospaced}]{Palatino}}

\setbeamerfont{title}{family=\Black, size=\Large}
\setbeamerfont{subtitle}{family=\Regular, size=\fontsize{12}{14}}
\setbeamerfont{author}{family=\Bold, size=\small}
\setbeamerfont{date}{family=\Regular, size=\small}

\setbeamerfont{section title}{family=\Black, size=\Large}
\setbeamerfont{frametitle}{family=\Bold, size=\large}
\setbeamerfont{block title}{family=\Regular, size=\normalsize}
\setbeamerfont{block title alerted}{family=\Regular, size=\normalsize}
\setbeamerfont{alerted text}{series=\bfseries}

\setbeamerfont{description item}{family=\Regular}

\setbeamerfont{caption}{size=\small}
\setbeamerfont{caption name}{family=\Regular}

\setbeamerfont{page number in head/foot}{size=\scriptsize}


\linespread{1.15}
